<?xml version="1.0" encoding="utf-8"?>
<!-- this view is meant to be converted to bitmap for use as sounding icon on google map -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <TextView
        android:id="@+id/soundings_pin_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_half"
        android:layout_marginEnd="@dimen/margin_half"
        android:background="@android:color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ste"/>

    <ImageView
        android:id="@+id/turnpint_marker_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/soundings_pin_location"
        app:layout_constraintStart_toStartOf="@+id/soundings_pin_location"
        app:layout_constraintTop_toBottomOf="@+id/soundings_pin_location"
        app:srcCompat="@drawable/ic_arrow_drop_down_white_24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>